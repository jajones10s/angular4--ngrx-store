  },
  "files": [
    "./src/app/app.module.ts",
    "./src/main.ts",
    // "./src/app/containers/rxjs-training-page/rxjs-training-page.module.ts",
    "./src/app/containers/detection-change-page/detection-change-page.module.ts",
    "./src/app/containers/three-training-page/three-training-page.module.ts"
  ],
  "types": [
    "hammerjs"
  ],
  "lib": [
    "es2016",
    "dom"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit": true
  }
}
